# TPT-RFID System Environment Variables
# Copy this file to .env and configure with your values

# Flask Configuration
FLASK_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here-generate-with-secrets.token_hex(32)

# Database Configuration
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://your_user:your_password@localhost/tpt_rfid

# Admin PIN for system access
ADMIN_PIN=your-admin-pin-here

# MQTT Configuration
# Set MQTT_ENABLED=true to use real MQTT broker (requires: pip install -r requirements-mqtt.txt)
# Set MQTT_ENABLED=false to use mock mode (logs only, no actual MQTT connection)
MQTT_ENABLED=false
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_CLIENT_ID=tpt-rfid-server

# MQTT Authentication (optional - only if your broker requires it)
# MQTT_USERNAME=your_mqtt_username
# MQTT_PASSWORD=your_mqtt_password

# WebSocket Configuration
# Set WEBSOCKET_ENABLED=true for real-time updates to web clients
# Set WEBSOCKET_ENABLED=false to use mock mode
WEBSOCKET_ENABLED=false
WEBSOCKET_CORS_ORIGINS=*

# Email Configuration (optional - for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com
